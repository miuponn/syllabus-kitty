
# Syllabus Kitty Backend - Environment Configuration
# Copy this file to .env and fill in your values:
#   cp .env.example 

# REQUIRED: Gemini AI (for syllabus extraction, simplification, translation)
# Get your API key from: https://makersuite.google.com/app/apikey
GEMINI_API_KEY=your_gemini_api_key_here
GEMINI_MODEL_ID=gemini-3.0-flash

# REQUIRED: Supabase (database and authentication)
# Get these from: https://supabase.com/dashboard/project/YOUR_PROJECT/settings/api
SUPABASE_URL=https://your-project-id.supabase.co
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key_here

# OPTIONAL: Email Notifications (Gmail SMTP for reminders)
# To enable email reminders, set up an App Password:
# 1. Enable 2FA on your Google account
# 2. Go to: https://myaccount.google.com/apppasswords
# 3. Create an App Password for "Mail"
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your_email@gmail.com
SMTP_PASSWORD=your_app_password_here
SMTP_FROM_EMAIL=your_email@gmail.com
SMTP_STARTTLS=true
SMTP_SSL_TLS=false

# Notification Settings
NOTIFICATION_ADVANCE_DAYS=10
TIMEZONE=America/Toronto
SYSTEM_NOTIFICATION_KEY=your_secret_system_key_here

# Server Configuration
HOST=0.0.0.0
PORT=8000
DEBUG=true

# CORS (allowed frontend origins, comma-separated)
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001,chrome-extension://YOUR_EXTENSION_ID

# Frontend URL (used by extension to open app)
FRONTEND_URL=http://localhost:3000

# Upload Configuration
MAX_UPLOAD_SIZE_MB=25
UPLOAD_DIR=./uploads

# Google Calendar API (for calendar integration)
GOOGLE_CALENDAR_CREDENTIALS_PATH=./credentials.json
GOOGLE_CALENDAR_TOKEN_PATH=./token.json
